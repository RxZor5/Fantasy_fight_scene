<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>

<BorderPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fantasyrollenspiel.TileMapController">
    <top>
        <HBox alignment="TOP_RIGHT" spacing="10" BorderPane.alignment="TOP_LEFT">
            <Label text="Coins: " fx:id="coinsLabel"/>
            <Label text="Iron: " fx:id="ironLabel"/>
            <HBox spacing="5">
                <Label text="Player Level: " fx:id="playerLevelLabel"/>
                <ProgressBar fx:id="levelProgressBar" prefWidth="200"/>
            </HBox>
        </HBox>
    </top>
    <center>
        <GridPane fx:id="gridPane"/>
    </center>
</BorderPane>
